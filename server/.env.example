# ─── Server ───────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=5000

# ─── MongoDB ──────────────────────────────────────────────────────────────────
# Get your connection string from https://cloud.mongodb.com
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/portfolio?retryWrites=true&w=majority

# ─── JWT ──────────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_min_64_chars
JWT_EXPIRES_IN=7d

# ─── Cloudinary ───────────────────────────────────────────────────────────────
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ─── SMTP / Email ─────────────────────────────────────────────────────────────
# Works with Gmail, SendGrid, Mailgun, Resend, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

FROM_NAME=Karman
FROM_EMAIL=your_email@gmail.com
ADMIN_EMAIL=your_email@gmail.com

# ─── CORS ─────────────────────────────────────────────────────────────────────
# Comma-separated list of allowed frontend origins
CLIENT_URL=http://localhost:3000,https://yourdomain.com
